<%- include('header') %>

<div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
    <h3>Üdvözlünk a kvízben, <%- user %>!</h3>
    <div class="row m-0 p-0">

        <!-- Kérdés megjelenítése -->
        <div class="col-12 m-0 p-0 mb-3">
            <h4 id="question" class="border p-3 rounded bg-dark">A kérdés szövege itt fog megjelenni...</h4>
        </div>
    </div>
    
    <div class="row m-0 p-0 mb-3">
        <!-- Válaszlehetőségek -->
        <div class="col-12 m-0 p-0">
            <ul id="answersList" class="list-group">
                <!-- Dinamikusan feltöltött válaszlehetőségek -->
            </ul>
        </div>
    </div>

    <div class="row m-0 p-0 mb-3">
        <!-- Új válasz beküldése -->
        <div class="form-floating col-10 m-0 p-0 pe-3">
            <input type="text" class="form-control" id="newAnswer" placeholder="Írd be a válaszod">
            <label for="newAnswer">Írd be a válaszod</label>
        </div>
        <button class="btn btn-primary col-2" id="submitAnswerBtn">Beküld</button>
    </div>
    <a href="/" class="btn btn-danger" id="exitQuizBtn">Kilépés a kvízből</a>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../../assets/moment.js"></script>
<script src="../../assets/quiz.js"></script>

<%- include('footer') %>

